{
  "name": "react-styles-provider",
  "version": "0.4.0",
  "description": "Provide themed styles to your entire React app in a performant way.",
  "main": "lib/index.js",
  "files": [
    "lib",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "babel src --out-dir lib",
    "watch": "babel src --out-dir lib --source-maps inline --watch",
    "lint": "eslint src",
    "test": "mocha --compilers js:babel/register --recursive src/**/*-test.js",
    "prepublish": "npm run clean && npm run build"
  },
  "keywords": [
    "react",
    "reactjs",
    "styles",
    "style",
    "themes",
    "theme"
  ],
  "author": "Devin Abbott <devinabbott@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dabbott/react-styles-provider.git"
  },
  "bugs": {
    "url": "https://github.com/dabbott/react-styles-provider/issues"
  },
  "homepage": "https://github.com/dabbott/react-styles-provider",
  "dependencies": {
    "fast-memoize": "^2.0.2",
    "inline-style-prefixer": "^2.0.4",
    "react-ctx": "^0.2.0",
    "shallowequal": "^0.2.2"
  },
  "peerDependencies": {
    "react": "14.X.X || 15.X.X"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "expect": "^1.13.4",
    "mocha": "^2.2.5",
    "rimraf": "^2.5.0"
  }
}
